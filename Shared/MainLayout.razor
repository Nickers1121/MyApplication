@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudGrid Justify="Justify.Center" Class="-mud-palet" Spacing="10">
            <MudItem>
                <MudButton Color="Color.Warning" Variant="Variant.Outlined">сообщество</MudButton>
            </MudItem>
            <MudItem>
                <MudButton Color="Color.Warning" Variant="Variant.Outlined">Донат</MudButton>
            </MudItem>
            <MudItem>
                <MudButton Href="news" Color="Color.Warning" Variant="Variant.Outlined">Новости</MudButton>
            </MudItem>
        </MudGrid>
        <MudIconButton Icon="@Icons.Custom.Brands.YouTube" Color="Color.Inherit" Link="https://www.youtube.com/c/WarThunderRU" Target="_blank" />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/Nickers1121" Target="_blank" />
        <MudMenu>
            <ActivatorContent>
                <MudAvatar Image="images/people_2_pad_front_white_500.jpg" />
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem>Профиль</MudMenuItem>

                <MudMenuItem>Выход с аккаунта</MudMenuItem>
            </ChildContent>
        </MudMenu>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">MyApplication</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>


@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}